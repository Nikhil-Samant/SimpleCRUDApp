@model ConfigurationViewModel
@{
    ViewData["Title"] = "Home Page";
}
<div id="alert" class="alert alert-@ViewBag.MessageResult alert-dismissible fade show d-none" role="alert">
    <h4 class="alert-heading text-capitalize">@ViewBag.MessageResult</h4>
    <p id="alertMessage">@ViewBag.Message</p>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="text-center">
    <h1 class="display-4">List of Configuration</h1>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Config Name</th>
                <th scope="col">FileFormat</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var config in Model.SavedConfigs)
            {
                <tr>
                    <th scope="row">@config.Id</th>
                    <td>@config.ConfigurationName</td>
                    <td>@config.ConfigType</td>
                    <td>
                        <a asp-controller="Home" asp-action="EditConfiguration" asp-route-id="@config.Id" class="btn btn-warning mb-2">Edit</a>
                        <a asp-controller="Home" asp-action="Delete" asp-route-id="@config.Id" class="btn btn-danger mb-2 pl-2">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        if($("#alertMessage").text() != "")
        {
            $("#alert").removeClass("d-none");
        }
    </script>
}